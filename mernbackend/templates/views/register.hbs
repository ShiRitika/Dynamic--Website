    <title>Register</title>

    <style type="text/css">
      body{ background-color: aliceblue; } .error{ color: red; margin: 0px;
      text-align: left; }
    </style>
  </head>
  <body>

    {{!-- {{>navbar}} --}}

    <h1>Register</h1>

    <section
      class="vh-100 bg-image"
      style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
  background-size:cover;
  background-repeat : repeat-x"
    >
      <div class="mask d-flex align-items-center h-200 gradient-custom-3">
        <div class="container h-200">
          <div
            class="row d-flex justify-content-center align-items-center h-200"
          >
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card" style="border-radius: 15px;">
                <div class="card-body p-5">
                  <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                  <form
                    action="/registration"
                    method="post"
                    onsubmit="return validateForm()"
                  >

                    <div class="form-outline mb-4">
                      <input
                        type="text"
                        id="registerName"
                        name="name"
                        class="form-control form-control-lg"
                      />
                      <p id="invalid_name" class="error"></p>
                      <label for="registerName">Your Name</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input
                        type="email"
                        id="registerEmail"
                        name="email"
                        class="form-control form-control-lg"
                      />
                      <p id="invalid_email" class="error"></p>
                      <label for="registerEmail">Your Email</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input
                        type="number"
                        class="form-control form-control-lg"
                        id="registerPhone"
                        name="phone"
                      />
                      <p id="invalid_phone" class="error"></p>
                      <label for="registerPhone">Phone Number</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input
                        type="password"
                        id="registerPassword"
                        name="password"
                        class="form-control form-control-lg"
                      />
                      <p id="invalid_password" class="error"></p>
                      <label for="registerPassword">Password</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input
                        type="password"
                        id="registerCPassword"
                        name="confirmpassword"
                        class="form-control form-control-lg"
                      />
                      <p id="invalid_CPassword" class="error"></p>
                      <label for="registerCPassword">Repeat your password</label>
                    </div>

                    <div class="d-flex justify-content-center">
                      <button
                        type="submit"
                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"
                      >Register</button>
                    </div>

                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script>
      //Program to disable or enable a button using javascript let input =
      document.querySelector("#registerName"); //selecting all input fields let
      input1 = document.querySelector("#registerEmail"); let input2 =
      document.querySelector("#registerPhone"); let input3 =
      document.querySelector("#registerPassword"); let button =
      document.querySelector(".btn"); //selecting all buttons button.disabled =
      true; //setting button state to disabled input.addEventListener("keyup",
      inputData);//for input field value input1.addEventListener("keyup",
      inputEmail); input2.addEventListener("keyup", inputPhone);
      input3.addEventListener("keyup", inputPassword); function inputData() { if
      (document.querySelector("#registerName").value === "") { button.disabled =
      true; //button remains disabled } else { button.disabled = false; //button
      is enabled } } function inputEmail() { if
      (document.querySelector("#registerEmail").value === "") { button.disabled
      = true; //button remains disabled } else { button.disabled = false;
      //button is enabled } } function inputPhone() { if
      (document.querySelector("#registerPhone").value === "") { button.disabled
      = true; //button remains disabled } else { button.disabled = false;
      //button is enabled } } function inputPassword() { if
      (document.querySelector("#registerPassword").value === "") {
      button.disabled = true; //button remains disabled } else { button.disabled
      = false; //button is enabled } } //adding validation in form let userName
      = document.getElementById("registerName"); let userEmail =
      document.getElementById("registerEmail"); let userPhone =
      document.getElementById("registerPhone"); let userPassword =
      document.getElementById("registerPassword"); let userConfirmPassword =
      document.getElementById("registerCPassword"); let flag = 1; function
      validateForm(){ validateName(); validateEmail(); validatePhone();
      validatePassword(); validateConfirmPass(); if ( validateName() === false
      || validateEmail() === false || validatePhone() === false ||
      validatePassword() === false || validateConfirmPass() === false ) { flag =
      0; } else { flag = 1; alert("User Registered Successfully!"); } } function
      validateName(){ if(userName.value == "") {
      document.getElementById("invalid_name").innerHTML = "Username is Empty!";
      flag = 0; } else if(userName.value.length < 3) {
      document.getElementById("invalid_name").innerHTML = "Username must have
      atleast 3 charecter"; flag = 0; } else {
      document.getElementById("invalid_name").innerHTML = ""; flag = 1; }
      if(flag){ return true; } else{ return false; } } function validateEmail(){
      if(userEmail.value == "") {
      document.getElementById("invalid_email").innerHTML = "Email Field is
      Empty!"; flag = 0; } else {
      document.getElementById("invalid_email").innerHTML = ""; flag = 1; }
      if(flag){ return true; } else{ return false; } } function validatePhone(){
      if(userPhone.value == "") {
      document.getElementById("invalid_phone").innerHTML = "Phone number Field
      is Empty!"; flag = 0; } else {
      document.getElementById("invalid_phone").innerHTML = ""; flag = 1; }
      if(flag){ return true; } else{ return false; } } function
      validatePassword(){ if(userPassword.value == "") {
      document.getElementById("invalid_password").innerHTML = "Password Field is
      Empty!"; flag = 0; } else {
      document.getElementById("invalid_password").innerHTML = ""; flag = 1; }
      if(flag){ return true; } else{ return false; } } function
      validateConfirmPass(){ if(userConfirmPassword.value == "") {
      document.getElementById("invalid_CPassword").innerHTML = "Confirm Password
      Field is Empty!"; flag = 0; } else {
      document.getElementById("invalid_CPassword").innerHTML = ""; flag = 1; }
      if(flag){ return true; } else{ return false; } }

    </script>

  </body>
</html>