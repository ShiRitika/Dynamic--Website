


          {{!-- ------------code for contact us start--------- --}}
    <div class="container-fluid mt-5 contact-style" id="contactId">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact-us</h1>
            <p class="text-center sub-heading">we are happy to help you!</p>

            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="\contact" method="post">
                    <div class="form-group">
                        <label for="contactPassword">Name</label>
                        <input type="text" class="form-control" id="contactName" placeholder="Full Name"
                        name="name">
                        <p id="invalid_name" class="error"></p>
                    </div>
                    <div class="form-group">
                        <label for="contactEmail">Email-Address</label>
                        <input type="email" class="form-control" id="contactEmail"
                        aria-describedby="emailHelp" placeholder="Enter your email" name="email">
                        <small id="emailHelp" class="form-text text-muted">we will never shareyour email with anyone else</small>
                    <p id="invalid_email" class="error"></p>
                    </div>
                    <div class="form-group">
                        <label for="contactPhone">Phone Number</label>
                        <input type="number" class="form-control" id="contactPhone" placeholder="Phone Number"
                        name="phone">
                        <p id="invalid_phone" class="error"></p>
                    </div>
                    <div class="form-group">
                        <label for="contactMessage">Message</label>
                        <input type="text" class="form-control" id="contactMessage" placeholder="Message"
                        name="message">
                        <p id="invalid_message" class="error"></p>
                    </div><br />
                    <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


